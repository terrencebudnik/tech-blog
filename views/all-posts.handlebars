<div class="posts">
  {{#each post}}
  <article class="card">
    <div class="card-header flex-row justify-space-between">
      <h2>
        <a href="/posts/{{post_id}}">{{title}}</a>
      </h2>
    </div>
    <div class="card-body">
      {{content}}
    </div>
    <div>
        Posted by {{User.username}} 
      </div>
  </article>
  {{/each}}
</div>