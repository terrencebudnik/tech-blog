<div class="post">
  <article class="card">
    <div class="card-header flex-row justify-space-between">
      <h2>{{post.title}}</h2>
      <div>
        Posted by {{User.username}} 
      </div>
    </div>
    <div class="card-body">
      {{post.content}}
    </div>
  </article>

  {{#if post.Comments}}
    <section class="card">
      <div class="card-header">
        <h3>Comments</h3>
      </div>

      <div class="card-body">
        {{#each post.Comments}}
          <div>
            <p>
              {{body}}
            </p>
            <p>
              &mdash; {{User.username}}
            </p>
          </div>
        {{/each}}
      </div>
    </section>
  {{/if}}

  <form id="new-comment-form" class="card">
    <div class="card-header">
      <h3>Add New Comment</h3>
    </div>

    <div class="card-body">
      <input type="hidden" name="post-id" value="{{post.post_id}}" />

      <label class="form-label" for="comment-body">Comment</label>

      <input name="comment-body" class="form-input" id="comment-content"></input>

      <button type="submit" class="btn btn-primary" id="comment-btn">Submit</button>
    </div>
  </form>
</div>

<script src="https://code.jquery.com/jquery-3.6.1.min.js"></script>
<script src="/js/comment.js"></script>